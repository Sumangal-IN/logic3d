CREATE TABLE product_image
(
	product_id number,
	image_id number,
	angle number,
	image_file varchar2(10000)
);

CREATE TABLE image_pointer
(
	image_id number,
	pointer_id number,
	x_value number(5,2),
	y_value number(5,2),
	short_description varchar2(100),
	long_description varchar2(100)
)