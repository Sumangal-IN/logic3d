drop table product_image;
CREATE TABLE product_image
(
	id number auto_increment,
	product_id number,
	image_id number,
	angle number,
	image_file clob
);

drop table image_pointer;
CREATE TABLE image_pointer
(
	id number auto_increment,
	image_id number,
	pointer_id number,
	x_value number(5,2),
	y_value number(5,2),
	short_description varchar2(100),
	long_description varchar2(100)
)